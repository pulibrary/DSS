<h1>Countries</h1>

<%= link_to 'Add New Country', new_country_path, class: 'btn pull-right heading__inline' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Key term</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.key_term_id %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
