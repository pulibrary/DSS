<% if search_state.has_constraints? %>
  <div id="appliedParams" class="clearfix constraints-container m-3">
    <h2 class="sr-only"><%= t('blacklight.search.search_constraints_header') %></h2>

    <%=link_to t('blacklight.search.start_over'), blacklight_path, class: "catalog_startOverLink btn btn-primary pull-right" %>
    <span class="constraints-label"><%= t('blacklight.search.filters.title') %></span>
    <%= render_constraints(params) %>
  </div>
<% end %>